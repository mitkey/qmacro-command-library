Function arrayAppend(srcArray, item)
    Dim result = Clone(srcArray)
    Dim len = UBound(result)
    If len = -1 Then 
        result(0) = item
        arrayAppend = result
        Exit Function
    End If

    result(len+1) = item
    arrayAppend = result
End Function

