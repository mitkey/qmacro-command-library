Function 功能模块()
    Dim space = Ity.ui_rInt("间隔毫秒",1000);

    If space <= 0 Then 
        ShowMessage "间隔不合法，使用默认值1000"
        Delay 2000
        
        space = 1000
    End If
    
    // 时间标记：定时清理内存
    Call ShanHai.TimeSign(1)
    // 时间标记：定时检查启动游戏--->解决闪退问题
    Call ShanHai.TimeSign(2)

    Do
        // 60 分钟，单位秒
        If ShanHai.Timer(1, 60 * 60) Then 
            TracePrint "清理后台内存"
            ShowMessage "清理内存"
            Call 系统_清理后台()
            Delay space
        End If
    	
        // 5 分钟，单位秒
        If ShanHai.Timer(2, 5 * 60) Then 
            TracePrint "检测是否有必要启动游戏"
            Call 系统_启动游戏()
            Delay space
        End If
     
        Call 功能_宝箱()

        Delay space
    Loop  
End Function

Function 系统_启动游戏
	
	
    If Sys.IsRunning(游戏包名) Then 
        // 在运行
    Else 
        // 不在运行
        RunApp 游戏包名
		
        ShowMessage "启动游戏"
        Delay 20*1000
    End If
	
End Function

Function main()
    Call 功能模块()
End Function


Call main()