End Function

Function 辅助_打开大本营界面
    // 检测多次失败处理
    Dim counter = 0
	
    Dim tempDealyTime = 300

    Do
        If 辅助_检测是否为大本营界面() Then 
            Exit Function
        Else    
            If 辅助_点击返回标识() Then 
                Delay tempDealyTime
            End If
        
            If 辅助_点击关闭标识() Then 
                Delay tempDealyTime
            End If
            
            If 辅助_关闭阿加莎助手() Then 
                Delay tempDealyTime
            End If
        
            If 辅助_点击进入大本营界面() Then 
                Delay tempDealyTime
            End If
        End If  
    
        If counter > 20 Then 
            TracePrint "无法打开大本营界面"
            Exit Function
        Else 
            counter = counter +1
        End If
    Loop
        
End Function

Function 辅助_大本营双指缩放到最小
    
    Dim x1 = screenX * (1/5)
    Dim y1 = screenY * (4/5)
    
    Dim x2 = screenX * (4/5)
    Dim y2 = screenY * (1/5)

    TouchDown x1, y1, 1
    TouchDown x2, y2, 2
    TouchMove x2, y2, 1, 100
    TouchMove x1, y1, 2, 100
    TouchUp 1
    TouchUp 2
    
End Function


