Function 辅助_打开聊天界面
    // 检测多次失败处理
    Dim counter = 0
	
    Dim tempDealyTime = 300

    Do
        Delay tempDealyTime
        If 辅助_检测是否为聊天界面() Then 
            Exit Function
        Else    
            If 辅助_点击返回标识() Then 
                Delay tempDealyTime
            End If
        
            If 辅助_点击关闭标识() Then 
                Delay tempDealyTime
            End If
            
            If 辅助_关闭阿加莎助手() Then 
                Delay tempDealyTime
            End If
        
            If 辅助_点击进入聊天界面() Then 
                Delay tempDealyTime
            End If
        End If  
    
        If counter > 20 Then 
            TracePrint  "无法打开聊天界面"
            Exit Function
        Else 
            counter = counter +1
        End If
    Loop
        
End Function

